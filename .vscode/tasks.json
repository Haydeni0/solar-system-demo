{
    "tasks": [
        {
            // RUN
            "type": "cppbuild",
            "label": "Run",
            "command": "",
            "args": [
                "${workspaceFolder}\\bin\\PROJECT.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Run the project.",
            "dependsOn": [ // Build before running
                "Build"
            ]
        },
        {
            // BUILD
            "type": "cppbuild",
            "label": "Build",
            "command": "g++",
            "args": [
                "-std=c++17",
                // Show errors
                "-Wall",
                "-Wshadow",
                // "-Werror",
                // Include
                "-I",
                "${workspaceFolder}\\include",
                // Compile/link
                "${workspaceFolder}\\src\\gui\\*.cpp", // Every *.cpp in gui
                "${workspaceFolder}\\src\\tools\\*.cpp", // Every *.cpp in tools
                "${workspaceFolder}\\libs\\*.a", // Libraries .a
                // Specify target path
                "-o",
                "${workspaceFolder}\\bin\\PROJECT.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the project."
        }
    ],
    "version": "2.0.0"
}